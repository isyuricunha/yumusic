<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#000000</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ui_splash_screen</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
        <item name="windowSplashScreenAnimationDuration">100</item>
    </style>

    <style name="AppTheme" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Force Spotify Colors -->
        <item name="colorPrimary">@color/spotify_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/spotify_dark_gray</item>
        <item name="colorOnPrimaryContainer">@color/spotify_orange_light</item>
        <item name="colorSecondary">@color/spotify_medium_gray</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/spotify_dark_gray</item>
        <item name="colorOnSecondaryContainer">@color/spotify_light_gray</item>
        <item name="colorTertiary">@color/spotify_orange_dark</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/spotify_black</item>
        <item name="colorOnTertiaryContainer">@color/spotify_orange_light</item>
        <item name="colorError">#CF6679</item>
        <item name="colorErrorContainer">@color/spotify_dark_gray</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnErrorContainer">#FF8A80</item>
        <item name="android:colorBackground">@color/spotify_black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/spotify_black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/spotify_dark_gray</item>
        <item name="colorOnSurfaceVariant">@color/spotify_light_gray</item>
        <item name="colorOutline">@color/spotify_medium_gray</item>
        <item name="colorOnSurfaceInverse">@color/spotify_black</item>
        <item name="colorSurfaceInverse">@color/white</item>
        <item name="colorPrimaryInverse">@color/spotify_orange_light</item>

        <!-- Force black backgrounds -->
        <item name="android:windowBackground">@color/spotify_black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/spotify_black</item>
        <item name="android:navigationBarColor">@color/spotify_black</item>
        <item name="android:scrollbars">none</item>
        
        <!-- Override Material3 components -->
        <item name="materialCardViewStyle">@style/SpotifyCard</item>
        <item name="materialButtonStyle">@style/SpotifyButton</item>
        <item name="floatingActionButtonStyle">@style/SpotifyFAB</item>
        <item name="bottomNavigationStyle">@style/ModernBottomNavigation</item>
        
        <!-- Spotify-inspired rounded corners -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Spotify.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Spotify.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Spotify.LargeComponent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/dividerColor</item>
    </style>

    <style name="NoConnectionTextView">
        <item name="background">?attr/colorErrorContainer</item>
        <item name="android:textColor">?attr/colorOnErrorContainer</item>
    </style>

    <!-- Spotify-inspired Shape Appearances -->
    <style name="ShapeAppearance.Spotify.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.Spotify.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.Spotify.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Spotify-inspired Card Style -->
    <style name="SpotifyCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/spotify_dark_gray</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Spotify-inspired Button Styles -->
    <style name="SpotifyButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/spotify_orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SpotifyButtonOutlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/spotify_orange</item>
        <item name="android:textColor">@color/spotify_orange</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Spotify-inspired FAB Style -->
    <style name="SpotifyFAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/spotify_orange</item>
        <item name="tint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Spotify.LargeComponent</item>
    </style>

    <!-- Modern Bottom Navigation Style -->
    <style name="ModernBottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@drawable/modern_bottom_nav_background</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="elevation">12dp</item>
        <item name="labelVisibilityMode">selected</item>
    </style>

    <!-- Modern Bottom Nav Indicator -->
    <style name="ModernBottomNavIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/spotify_orange</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Spotify.SmallComponent</item>
    </style>
</resources>
