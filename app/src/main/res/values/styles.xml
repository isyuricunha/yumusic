<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#000000</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ui_splash_screen</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
        <item name="windowSplashScreenAnimationDuration">100</item>
    </style>

    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Spotify-inspired Pure Black Theme -->
        <item name="colorPrimary">@color/spotify_orange</item>
        <item name="colorOnPrimary">@color/spotify_white</item>
        <item name="colorPrimaryContainer">@color/spotify_dark_gray</item>
        <item name="colorOnPrimaryContainer">@color/spotify_white</item>
        <item name="colorSecondary">@color/spotify_light_gray</item>
        <item name="colorOnSecondary">@color/spotify_black</item>
        <item name="colorSecondaryContainer">@color/spotify_medium_gray</item>
        <item name="colorOnSecondaryContainer">@color/spotify_white</item>
        <item name="colorTertiary">@color/spotify_orange</item>
        <item name="colorOnTertiary">@color/spotify_white</item>
        <item name="colorTertiaryContainer">@color/spotify_dark_gray</item>
        <item name="colorOnTertiaryContainer">@color/spotify_white</item>
        <item name="colorError">@color/md_theme_dark_error</item>
        <item name="colorErrorContainer">@color/md_theme_dark_errorContainer</item>
        <item name="colorOnError">@color/md_theme_dark_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_dark_onErrorContainer</item>
        <item name="android:colorBackground">@color/spotify_black</item>
        <item name="colorOnBackground">@color/spotify_white</item>
        <item name="colorSurface">@color/spotify_black</item>
        <item name="colorOnSurface">@color/spotify_white</item>
        <item name="colorSurfaceVariant">@color/spotify_dark_gray</item>
        <item name="colorOnSurfaceVariant">@color/spotify_light_gray</item>
        <item name="colorOutline">@color/surface_overlay</item>
        <item name="colorOnSurfaceInverse">@color/spotify_black</item>
        <item name="colorSurfaceInverse">@color/spotify_white</item>
        <item name="colorPrimaryInverse">@color/spotify_orange</item>

        <!-- Status and Navigation Bar -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/spotify_black</item>
        <item name="android:navigationBarColor">@color/spotify_black</item>
        <item name="android:scrollbars">none</item>
        
        <!-- Window Background -->
        <item name="android:windowBackground">@color/spotify_black</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/dividerColor</item>
    </style>

    <style name="NoConnectionTextView">
        <item name="background">?attr/colorErrorContainer</item>
        <item name="android:textColor">?attr/colorOnErrorContainer</item>
    </style>

    <!-- Spotify-style Modern Components -->
    <style name="SpotifyCard">
        <item name="android:background">@drawable/spotify_card_background</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="SpotifyButton" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/spotify_button_background</item>
        <item name="android:textColor">@color/spotify_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <style name="SpotifyButtonOutlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:background">@drawable/spotify_button_outlined_background</item>
        <item name="android:textColor">@color/spotify_orange</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="strokeColor">@color/spotify_orange</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <style name="SpotifyTextTitle">
        <item name="android:textColor">@color/spotify_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="SpotifyTextSubtitle">
        <item name="android:textColor">@color/spotify_light_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="SpotifyTextBody">
        <item name="android:textColor">@color/spotify_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="SpotifyPlayerButton">
        <item name="android:background">@drawable/spotify_player_button_background</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="tint">@color/spotify_white</item>
    </style>

    <style name="SpotifyPlayerButtonLarge">
        <item name="android:background">@drawable/spotify_player_button_large_background</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="tint">@color/spotify_black</item>
    </style>

    <style name="SpotifyBottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/spotify_black</item>
        <item name="itemIconTint">@drawable/bottom_nav_item_color</item>
        <item name="itemTextColor">@drawable/bottom_nav_item_color</item>
        <item name="itemActiveIndicatorStyle">@style/SpotifyBottomNavIndicator</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="SpotifyBottomNavIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/spotify_orange</item>
    </style>
</resources>
